<div class="row margin">
  <form action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="row">
      <div class="input-field col s4 offset-s4">
        <label for="">Name</label>
        <input name="name" type="text">
        <% if @errors %>
        <%= @errors[:name].join(', ') %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s4 offset-s4">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" class="validate">
        <% if @errors %>
        <%= @errors[:email].join(', ') %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s4 offset-s4">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" class="validate">
        <% if @errors %>
        <%= @errors[:password].join(', ') %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s4 offset-s4">
        <label for="">Description</label>
        <input name=description type="text">
        <% if @errors %>
        <%= @errors[:description].join(', ') %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s4 offset-s4">
        <label for="">Profile Image URL</label>
        <input name="photo_url" type="text">
        <% if @errors %>
        <%= @errors[:photo_url].join(', ') %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col s4 offset-s4">
        <button class="btn waves-effect waves-light">Sign Up</button>
      </div>
    </div>
  </form>
  <div class="row margin">
    <div class="col s4 offset-s4 top-rule">
      <h4 class="member">Already a member?</h4>
      <a href="/session/new" class="multi-btn">Login</a>
    </div>
  </div>
</div>
