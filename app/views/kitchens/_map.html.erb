<style>
  #map {
    height: 400px;
    width: 100%;
   }
</style>


<div id="map"></div>

<script>
  function initMap() {
    var uluru = {lat: -25.363, lng: 131.044};
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 6,
      center: uluru
    });

    $.ajax({
      url: '/api/kitchens'
    }).done(function(res) {

      for (i=0; i < res.length; i++ ) {
        var marker = new google.maps.Marker({
          position: {lat: res[i].latitude, lng: res[i].longitude},
          map: map
        });
      }
    });
  }




</script>

<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBfCWcPbEpnUQeSmO0w1e02F33iBy614JM&callback=initMap">
</script>
